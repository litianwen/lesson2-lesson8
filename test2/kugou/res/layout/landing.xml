<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="220dp"
     android:orientation="vertical"
     android:background="@drawable/back"
     >
   <Button
       android:id="@+id/x"
         android:gravity="left|top"
         android:layout_gravity="top"
       
         android:layout_width="15dp"
         android:layout_height="20dp"
         android:text="X"
         android:textColor="@android:color/white"
         android:background="@android:color/transparent"/>  
      <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     >
   
    <ImageView
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:src="@drawable/anq"
        /> 
    <Button
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:textSize="20dp"
        android:text="听"/>    
    <Button
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:textSize="20dp"
        android:text="看"/>    
    <Button
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:textSize="20dp"
        android:text="唱"/>  
       <ImageView
           android:layout_marginTop="20dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="20dp"
        android:src="@drawable/skin_kg_comm_ic_main_top_search_normal"
        />      
    
 </LinearLayout>  
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     >
     <Button
         android:id="@+id/like"
         android:layout_margin="10dp"
         android:background="@android:color/transparent"
         android:layout_weight="1"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:text="我喜欢"
         android:drawableTop="@drawable/skin_kg_navigation_fav_normal"
         />
     <Button
           android:layout_margin="10dp"
         android:background="@android:color/transparent"
         android:layout_weight="1"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:text="歌单"
         android:drawableTop="@drawable/skin_kg_navigation_playlist_normal"
         />
     <Button
           android:layout_margin="10dp"
         android:background="@android:color/transparent"
         android:layout_weight="1"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:text="下载"
         android:drawableTop="@drawable/skin_kg_navigation_download_normal"
         />
     <Button
           android:layout_margin="10dp"
         android:background="@android:color/transparent"
         android:layout_weight="1"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:textColor="@android:color/white"
         android:text="最近"
         android:drawableTop="@drawable/skin_kg_navigation_recent_normal"
         />
    
 </LinearLayout>
  <LinearLayout
      android:layout_margin="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <ImageView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/skin_kg_navigation_local_music_normal"
        />  
  <TextView
      android:layout_marginTop="5dp"
      android:gravity="center"
        android:layout_weight="1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="本地音乐"
      android:textColor="@android:color/white"
      />  
   <ImageView
      
       android:layout_marginTop="5dp"
         android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/skin_kg_navigation_random_normal"
        />  
        <TextView
            android:layout_marginTop="5dp"
            android:gravity="right"
              android:layout_weight="4"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="0 首"
      android:textColor="@android:color/white"
      /> 
       <ImageView
             android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/back_nor"
        />         
  </LinearLayout> 
  </LinearLayout> 
 <LinearLayout
     android:layout_marginTop="20dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     >
   <Button
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="wrap_content"
       android:text="乐库"
       android:drawablePadding="10dp"
       android:background="@android:color/transparent"
       android:drawableTop="@drawable/skin_kg_navigation_yueku_normal"
       />  
   <Button
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="wrap_content"
       android:text="电台"
       android:drawablePadding="10dp"
       android:background="@android:color/transparent"
       android:drawableTop="@drawable/skin_kg_navigation_channel_normal"
       />  
   <Button
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="wrap_content"
       android:text="酷群"
       android:drawablePadding="10dp"
       android:background="@android:color/transparent"
       android:drawableTop="@drawable/skin_kg_navigation_kuchat_normal"
       />  
     
     
 </LinearLayout> 

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     >
     <ImageView
         android:id="@+id/the1"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="100dp"
         android:layout_centerVertical="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/skin_kg_navigation_tool"/>
     
     <TextView
         android:id="@+id/the2"
         android:layout_marginLeft="10dp"
         android:layout_toRightOf="@id/the1"
           android:layout_marginTop="100dp"
         android:layout_centerVertical="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Music Tools"
         android:textSize="20dp"
         />
     
     <TextView
         android:id="@+id/the3"
         android:layout_marginLeft="130dp"
         android:layout_toRightOf="@id/the2"
           android:layout_marginTop="100dp"
         android:layout_centerVertical="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Shazam Encore "
         android:textSize="20dp"
         />
  <ImageView
      android:layout_marginLeft="5dp"
      android:id="@+id/the4"
      android:layout_toRightOf="@id/the3"
        android:layout_marginTop="100dp"
         android:layout_centerVertical="true"
         android:layout_width="wrap_content"
         android:layout_height="10dp"
         android:src="@drawable/dot_red_16px_1174475_easyicon"/>    
  <ImageView
      android:layout_marginLeft="10dp"
      android:layout_toRightOf="@id/the4"
        android:layout_marginTop="100dp"
         android:layout_centerVertical="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/b1p"/>   
           <View
     android:layout_width="match_parent"
     android:layout_height="1dp"
     android:background="#8aaa"
     android:layout_alignTop="@id/the1"
     /> 
           <View
               android:layout_marginTop="35dp"
     android:layout_width="match_parent"
     android:layout_height="1dp"
     android:background="#8aaa"
     /> 
          
 </RelativeLayout> 

</LinearLayout>
