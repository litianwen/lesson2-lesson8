<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/joyin"
    >

   <ImageView
       android:id="@+id/logo"
       android:paddingTop="140dp"
       android:paddingLeft="130dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@android:color/transparent"
       android:src="@drawable/f04ccfdee31955f59f2d835adc1bdaa2"
       />
<LinearLayout
    android:paddingTop="145dp"
    android:layout_toRightOf="@id/logo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    
    >
    <TextView
        android:textStyle="bold|italic"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOYIN MUSIC"
        android:textColor="@color/zise"
        android:textSize="20dp"
        />
    <TextView
        android:textStyle="bold|italic"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forever just music"
        android:textColor="@color/zise"
        />
</LinearLayout>
  <Button
      android:id="@+id/landing"
      android:layout_marginTop="330dp"
      android:layout_centerHorizontal="true"
      android:layout_below="@id/logo"
      android:gravity="center"
      android:layout_width="170dp"
      android:layout_height="30dp"
      android:text="LINDING"
      android:background="@drawable/landing"
      android:textColor="@android:color/white"
      />  
  <Button
      android:layout_marginTop="8dp"
      android:layout_below="@id/landing"
      android:id="@+id/registered"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:layout_width="170dp"
      android:layout_height="30dp"
      android:text="REGISTERED"
      android:background="@drawable/newuser"
      android:textColor="@android:color/white"
      />  

  <View
      android:id="@+id/linenoe"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="30dp"
      android:layout_below="@id/registered"
      android:background="@android:color/white"
      android:layout_width="180dp"
      android:layout_height="1dp"
      /> 
    <TextView
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
         android:layout_below="@id/registered"
    	android:background="@drawable/text"
        android:layout_toRightOf="@id/linenoe"
        android:id="@+id/Otherlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTHER LODIN"
        android:textColor="@android:color/white"
        />     
  <View
      android:layout_toRightOf="@id/Otherlogin"
      android:layout_marginLeft="4dp"
      android:layout_marginTop="30dp"
      android:layout_below="@id/registered"
      android:background="@android:color/white"
      android:layout_width="180dp"
      android:layout_height="1dp"
      />    
 
  <ImageButton
      android:id="@+id/weibo"
      android:layout_marginTop="20dp"
       android:layout_alignLeft="@id/landing"
       android:layout_below="@id/linenoe"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/dfi"
      android:background="@android:color/transparent"
      />
   <ImageButton
       android:layout_marginLeft="25dp"
       android:id="@+id/qq"
       android:layout_marginTop="20dp"
       android:layout_toRightOf="@id/weibo"
      android:layout_below="@id/linenoe"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/b10"
      android:background="@android:color/transparent"
      />
  <ImageButton
      android:layout_marginLeft="5dp"
      android:layout_alignRight="@id/registered"
      android:layout_marginTop="20dp"
      android:layout_toRightOf="@id/qq"
       android:layout_below="@id/linenoe"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/b12"
      android:background="@android:color/transparent"
      />
  
</RelativeLayout>
